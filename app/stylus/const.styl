gilroybold = 'GilroyExtraBold', sans-serif
gilroy =  'Gilroy', sans-serif
osans = 'Open Sans', sans-serif
yellow = #ffc600
leather =#f7e296
bluegray = #e5e5e5

.zero
    padding 0
    margin 0

simple-text()

    color #000
    font-size: 15px
    font-weight: 300
    line-height: 30px
    letter-spacing: 0.15px
    &:hover, &focus
        color rgba(black, .6)
    &:active
        color rgba(black, .3)

   
bold-link(color = black, ls = 3.6px)
    color: color
    letter-spacing ls
    font-family gilroybold
    font-size: 18px
    font-weight: 400
    line-height: 24px
    &:hover, &focus
        opacity 0.6
    &:active
        opacity 0.3



uppercase()
    text-transform: uppercase

.container
    min-width 1160px
    box-sizing: border-box
    margin 0 auto