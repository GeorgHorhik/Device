.footer
    display flex
    justify-content space-between
    position relative
    padding-top 65px
    padding-bottom 65px
    &_wrapper
        background-color brown
        margin-top 90px

    &__logo
        font-size: 48px
        font-weight: 400
        text-transform: uppercase
        color: yellow
        position absolute
        top: 53px
        left -3px
        letter-spacing 0.5px
        font-family gilroybold
.design-stick
    color: white
    margin-top 66px
    letter-spacing -0.3px
    position relative
    &::after
        content: ''
        width 80px
        height 6px
        background-color yellow 
        bottom -83px
        position absolute
.footer__links
    margin-top: 54px
    width 415px
    display flex
    flex-direction: column
    align-items: center
    &__item
        color white
    &__text
        margin-left -12px
        padding 0
        list-style none
        font-family gilorybold
        font-size: 18px
        font-weight: 400
        line-height: 24px
        text-transform: uppercase
        display flex
        justify-content space-between
    &_social
        list-style none
        display flex
        width: 141px
        font-size: 0
        justify-content space-between
        padding: 0
.social-media__buttons
    display block
    width 32px
    height 32px
    background-position: center
    background-size: 32px 32px

for num in fb instagram twitter
    .{num}
        background-image: url('../../src/svg/' + num + '.svg')


 