.header
    padding 45px 60px 160px 60px
    display flex
    justify-content space-between
    background-color leather
    margin-top 40px
    position relative
    min-height: 298px
.page
    &__logo
        position absolute
        top -24px
        letter-spacing 0.3px
    &__nav
        display flex
        flex-direction column
    &__search
        box-sizing: border-box
        margin-top -8px
        padding 0px 0px 8px 40px
        color #000
        font-size: 15px
        font-weight: 300
        line-height: 30px
        letter-spacing: 0.15px
        background-color transparent
        border: 0px
        height 50px
        position: relative
        &::placeholder
            simple-text()
            color: rgba(black, .3)
        &:hover::placeholder
            color: rgba(black, .6)
        &:focus
            box-sizing: border-box
            border-bottom 2px solid #000
            padding-bottom 6px
            outline: none
            &::placeholder
                color: black
        &-button
            display none
            &:hover
                background-color: black !important
                color: white !important
            &:active
                color: rgba(white, .3) !important
        &:focus + &-button, &-button:active
            simple-text()
            display block
            border: 2px solid black
            background-color transparent
            padding:  8px 20px
            margin-top -10px


.header__form::before
    content url(../../src/svg/search.svg)
    position: absolute
    top 51px
    left 63px
    display: block
    cursor: pointer
.header__form
    display flex
.catalog__title
    margin-top 25px
    uppercase()
    position: relative
    &::before
        content url(../../src/svg/plus.svg)
        position: absolute
        top 2px
        right: -27px
        opacity: .6

.catalog-ul
    padding: 0
    flex-wrap: wrap
    width   615px
    list-style none
    position: absolute
    background-color: leather
    z-index: 200
    top: 178px
    left: 0;
    padding-bottom: 32px
    padding-right: 485px
    margin-top: 0
    padding-left: 59px
    box-shadow: 5px 165px 153px -51px
    display none
    opacity: 0
    transition: .5s
    transition-delay: .01s
    &_enabled
        
        
        transition: .5s
        transition-delay: .01s
        display: flex
        opacity: 1
    &__item
        margin-right: 60px
        &_wrap
            margin-right: 134px
            margin-left: 29px
.user__nav
    display flex
    flex-direction: column
    align-content: stretch
    &_rows
        display flex
        justify-content flex-start
        &_end
            margin-bottom 40px
            justify-content flex-end
            margin-top -3px
            & a
                simple-text()
.link
    &__user
        &:hover, &:focus
            opacity: .6
        &:active
            opacity: .3
        position: relative
        margin-right 237px
    &__compare
        &:hover, &:focus
            opacity: .6
        &:active
            opacity: .3
        position: relative
        margin-right: 58px
    &__cart
        &:hover, &:focus
            opacity: .6
        &:active
            opacity: .3
        position: relative
        margin-right 1px
.user__nav__link
    bold-link()
    uppercase()
    &:first-child
        margin-right 36px
    &:nth-child(2)
        margin-right 105px
for links in user compare cart
    .link__{links}::before
        content: url(../../src/svg/links.svg)
        position absolute
        display block
        top 1px
        left: -23px

