*:focus{
    outline-color: yellow

}
.meme
    display: none
    position fixed
    width 100vw
    height 100vh
    background-color rgba(black, .8)
    top 0
    left 0
    z-index: 1000000
    transition: .5
    opacity: 0
    &_on
        display: block
        opacity: 1
            
    &__text
        animation: dgray 5s 
        display block
        margin-top calc(50vh - 295px/2)
        margin-left calc(50vw - 295px/2)

@keyframes dgray {
    0% {
        opacity 0
        transform: scale(1)
        }
    50%{
        transform: scale(3) rotate(45deg)
        }
    80%{
        transform: scale(7) 
        }
    100%    {
        transform: scale(0.07) rotate(190deg) 
        display none
        opacity 1
        }
}