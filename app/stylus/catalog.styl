.catalog__price
    max-width 768px
    padding-left 73px

.catalog__sort
    display flex
    margin-left: -172px
    width: 290px
    justify-content: space-between
    &_inner
        display flex
        justify-content space-between
        margin-top 23px
        margin-bottom 24px
    &_order
        display flex
        margin-right: 8px
        width: 41px
        justify-content: space-between
        margin-top: 6px

.catalog__sort__h2
    padding 0
    margin 0


.catalog__sort__item
    font-family osans
    text-decoration: none
    color rgba(black, .3)
    font-size 14px
    line-height 24px
    letter-spacing 0.09px
    position relative
    &:hover, &:focus
        color rgba(black)
    &:active
        color rgba(black)
.catalog__sort__item_arrow
    display block
    width 11px
    height 11px
    margin 0
    padding 0
    background-position: center
    background-repeat: no-repeat
    &:not(:hover):not(:focus)
        opacity: .3

.catalog__sort__item_arrow_top
    background-image: url(../../src/svg/icon-up-dir.svg)
.catalog__sort__item_arrow_bottom
    background-image: url(../../src/svg/icon-down-dir.svg)

.catalog__sort_order__item
    width 11px
    height 11px
    margin 0
    padding 0


.catalog__products
    display flex
    flex-wrap: wrap


    margin-top 92px
    &__item
        margin-bottom 46px
        position relative
        &:nth-child(2n)
            margin-left 40px
.product__name
    font-family gilroybold
    font-size: 18px
    font-weight: 400
    line-height: 24px
    letter-spacing: 0.18px
    text-decoration none
    color black
    
    width: 280px
    display: inline-block
.product_hover
    opacity 0
    background-color rgba(gray, .7)
    position absolute
    width 360px
    height 380px
    transition: .5s
    transition-delay: .2s
    top: 0
    left: 0
    &_inner
        margin-top 140px
        margin-left 111px
    &:hover, &:focus
        opacity  1

.product__btn
    letter-spacing 3.5px
    margin-bottom 13px
.product__info
    display flex    
    justify-content space-between
    align-content: flex-start
    margin-top 28px
.product__compare
    text-decoration: none
    opacity: 0.5
    color: black
    font-family: osans
    font-size: 13px
    font-weight: 300
    line-height: 36px
    letter-spacing: 0.13px
    display inline-block
    margin-right 5px
.product__img
    width 360px
    height 380px
    &_inner
        display inline-block
.product__span
    color: #464646
    margin-top: -3px
    letter-spacing: 0.65px
    display: inline-block

.catalog__navigation

    display flex
    padding 30px
    justify-content space-between
    background-color rgba(gray, .8)
    margin-bottom 80px
.catalog__bread-crums__item
    font-family:gilroybold
    font-size: 16px
    font-weight: 400
    line-height: 24px
    text-transform: uppercase
    letter-spacing: 0.91px
    text-decoration none
    color black
    &_number
        margin-left 20px
        color rgba(black, .3)
        &:hover, &:focus
            color rgba(black, .5)
#catalog__bread-crums__item_acive
    color black