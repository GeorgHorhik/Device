
.writeUs
    display none
    padding 100px
    background-color white
    box-shadow: 0 10px 20px rgba(4, 6, 6, 0.2);
    position fixed
    top calc(50% - 553px/2)
    left calc(50% - 960px/2)
    z-index 500
    transition-delay: .2s
    
    &_enable
        display block
        opacity 1
        animation-duration: 5s
        animation writeUs .4s 
    &_inner
        display flex
        justify-content space-between
    &__span
        font-family: gilroybold;
        font-size: 18px;
        font-weight: 400;
        line-height: 24px;
        &:not(:nth-child(2n))
            margin-right 40px
        &_textarea
            margin-top 35px
            display block
    &__button
        margin-left 38px
    &_close
        display block
        position absolute
        top 22px
        right 22px
        transition .6s
        &:not(:hover):not(:focus)
            opacity .5
        &:hover, &:focus
            opacity 1
        &:active
            opacity .3


.input_text
    background-color rgba(gray, .5)
    padding 20px
    border none
    width: 360px
.form__textarea
    width 769px
    height 156px
    margin-top 6px

@keyframes writeUs {
    0% {
        opacity 0
        }
    100%{
        opacity 1
        }
    
}